body
	font-size 15px
	font-family 'Open Sans', sans-serif
	font-weight 100

a, a:hover
	text-decoration none
	color: #000

.claim
	font-size 25px

// colours

.background-grey
	background-color grey

// spacers

.spacer-45
	height 45px

.spacer-25
	height 25px

.padding-top-bottom-15
	padding-top 15px
	padding-bottom 15px

.margin-bottom-10
	margin-bottom 10px

// buttons

.btn:focus
	outline 0

.custom-button, .custom-button:focus, .custom-button:visited
	color #fff
	background-color #1F2532
	border-color #1F2532
	text-decoration none

.custom-button:hover
	color #fff
	background-color #FC4343
	border-color #FC4343

#functions
	i
		font-size 30px
	.col-md-6:hover
		border solid 1px grey
	span
		cursor pointer

#overlay
	position absolute
	width 100%
	height 100%
	background-color rgba(217, 237, 247, 0.62)
	z-index 10
	left 0
	right 0
	top 0
	bottom 0










